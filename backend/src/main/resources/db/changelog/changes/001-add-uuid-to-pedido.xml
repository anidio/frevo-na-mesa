<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                           http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="1" author="seu-nome">
        <preConditions onFail="MARK_RAN">
            <not>
                <columnExists tableName="pedido" columnName="uuid"/>
            </not>
        </preConditions>
        <addColumn tableName="pedido">
            <column name="uuid" type="UUID"/>
        </addColumn>
    </changeSet>

    <changeSet id="2" author="seu-nome">
        <preConditions onFail="MARK_RAN">
            <not>
                <uniqueConstraintExists constraintName="uc_pedido_uuid" tableName="pedido"/>
            </not>
        </preConditions>
        <addUniqueConstraint
                columnNames="uuid"
                constraintName="uc_pedido_uuid"
                tableName="pedido"/>
    </changeSet>

</databaseChangeLog>